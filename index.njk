    <script> 
    /*"Projects are never complete, only abandoned.",
    "Design is emotional.",
    "Design is goal-oriented.",
    "The universe is infinite. Human knowledge is not.",
    "Bi-directional links promote lateral power distribution.",
    "Poorly designed research is worse than no research at all.",
    "Emotion is the sum of environmental influence.",
    "Personality is the sum of relationships. Relationships are the result of systems.",
    "Rules are imaginary, consequences are not.",
    "Content moderation is a climate change issue.",
    "Language evolves over time.",*/
    const aphorisms = [    
    "Design is manipulative. It's not inherently immoral.",
    "Understanding cognitive bias does not make you immune to its effects.",
    "Spaced repetition is the most underrated design principle.",
    "What would happen if more websites implemented bi-directional links?"
    ];

    document.addEventListener('DOMContentLoaded', e=>{
        const displayTargets = document.getElementsByClassName('aphorism');
        const refreshBtns = document.getElementsByClassName('aphorism');
        let message = '';

        getAphorism();

		for(button of refreshBtns){
			button.addEventListener('click', ()=>{
				getAphorism()
			})
		}

        function getAphorism(){
            let newMessage = getRandomItem(aphorisms);
            if(message === newMessage){
                getAphorism()
            }else{
				for(target of displayTargets){
					target.innerText = newMessage;
				}
                message = newMessage;
            }
        }
    })

    function getRandomItem (items) {
        let selected = items[Math.floor(Math.random() * items.length)];
        return selected;
    }
    </script>

